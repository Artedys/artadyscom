<div class="container">

  {{main-nav session=session signOut='signOut'}}

    {{#if session.isAuthenticated}}
      {{outlet}}
    {{else}}
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
            <h2 class="form-signin-heading">Please sign in</h2>
                <form>
                    <div class="form-group">
                      <label>Email address</label>
                      {{input value=email type="email" id="inputEmail" class="form-control" placeholder="Email address (try: admin@example.com)" required=true autofocus=true}}
                    </div>
                    <div class="form-group">
                      <label>Password</label>
                      {{input value=password type="password" id="inputPassword" class="form-control" placeholder="Password (try: admin1)" required=true}}
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" {{action "signIn" email password}}>Sign in</button>
                </form>
            </div>
        </div>
    {{/if}}

</div>
